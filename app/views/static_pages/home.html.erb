<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>My questions/answers</h3>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Government Application App</h1>

  <h2>
    This tool will hopefully make the tedious task of generating your cover letter for multiple competition a breeze.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>